#!/bin/bash

DIR=${AM_HOME}/am/arch/mips32-npc/img
DEST=$1
shift

bash -c "cd $DIR/boot && make"

mips-linux-gnu-ld -EL -T $DIR/loader.ld -e _start -o ${DEST} $DIR/boot/start.o --start-group $@ --end-group &&  \
mips-linux-gnu-objdump -d ${DEST} > ${DEST}.code.txt && \
mips-linux-gnu-objdump -d ${DEST} | python $DIR/scripts/instr_check.py

